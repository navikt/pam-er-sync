{
  "settings": {
    "analysis": {
      "analyzer": {
        "enhetsnavn_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "enhetsnavn_stop"
          ]
        }
      },
      "filter": {
        "enhetsnavn_stop": {
          "type": "stop",
          "stopwords": [
            "as",
            "asa",
            "sa",
            "da",
            "an",
            "avd"
          ],
          "ignore_case": true
        }
      }
    }
  },
  "mappings": {
    "underenhet": {
      "properties": {
        "navn": {
          "type": "text",
          "analyzer": "enhetsnavn_analyzer",
          "copy_to": "navn_suggest"
        },
        "organisasjonsnummer": {
          "type": "keyword"
        },
        "adresse.postnummer": {
          "type": "keyword"
        },
        "navn_suggest": {
          "type": "completion"
        }
      }
    }
  }
}
