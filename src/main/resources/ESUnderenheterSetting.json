{
  "settings": {
    "analysis": {
      "analyzer": {
        "enhetsnavn_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "enhetsnavn_stop"
          ]
        },
        "enhetsnavn_completion_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "strip_apostrophe_s"
          ],
          "filter": [
            "lowercase",
            "enhetsnavn_edge_ngrams"
          ]
        },
        "enhetsnavn_completion_search_analyzer": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "strip_apostrophe_s"
          ],
          "filter": [
            "lowercase"
          ]
        }
      },
      "char_filter": {
        "strip_apostrophe_s": {
          "type": "pattern_replace",
          "pattern": "([^ ])'([sS])",
          "replacement": "$1$2"
        }
      },
      "filter": {
        "enhetsnavn_stop": {
          "type": "stop",
          "stopwords": [
            "as",
            "asa",
            "sa",
            "da",
            "an",
            "avd"
          ],
          "ignore_case": true
        },
        "enhetsnavn_edge_ngrams": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 30
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "navn": {
        "type": "text",
        "analyzer": "enhetsnavn_analyzer",
        "copy_to": "navn_ngram_completion"
      },
      "organisasjonsnummer": {
        "type": "keyword"
      },
      "adresse.postnummer": {
        "type": "keyword"
      },
      "navn_ngram_completion": {
        "type": "text",
        "analyzer": "enhetsnavn_completion_analyzer",
        "search_analyzer": "enhetsnavn_completion_search_analyzer"
      }
    }
  }
}
